require.config({
  baseUrl: '../../../../',
  paths: {
    // requirejs plugins
    text: 'public/js/requirejs/text',
    cs: 'public/js/requirejs/cs',
    'coffee-script': 'public/js/CoffeeScript',
    'Squire': 'node_modules/testament/Squire'
  }
})

define(function(require) {
  var numberOfTests = {{files.length}}
  var requiredTests = 0
  var mochaRan = false

  function testRequired() {
    requiredTests++
    if (numberOfTests >= requiredTests && !mochaRan) {
      mochaRan = true
      console.log('running tests yo!')
      if (window.mochaPhantomJS) {
        mochaPhantomJS.run()
      }
      else {
        mocha.run()
      }
    }
  }
  // require all test files
  {{#each files}}
  require('{{{fileName}}}').onRequired(testRequired)
  {{/each}}
})
